{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "TestSpectra",
  "version": "0.2.25",
  "identifier": "TestSpectra",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "TestSpectra - QA Automation Platform",
        "width": 1600,
        "height": 960,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "devtools": true,
        "dragDropEnabled": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/default-config.env"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "active": true,
      "endpoints": [
        "https://github.com/TestSpectra/testspectra/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFEMDNDMERBQzhDMkNFNUMKUldSY3pzTEkyc0FESGNNL1FyOXBzUDdBdVJRbTFoZ0w1VTF2OU1mVlNhTW5aamVVU0lKNVp4ZUQK"
    }
  }
}